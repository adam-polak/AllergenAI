@page "/"
@rendermode InteractiveServer


<MudPaper Class="pa-4" Width="200px" style="margin-left:20px;margin-right:0px;">
    <MudStack Spacing="2">
        <MudButton OnClick="OnExpandCollapseClick">
            @if(_expanded) @hideAllergens
            else @viewAllergens                     
        </MudButton>
        <MudDivider />
        <MudCollapse Expanded="_expanded" class="text-center">
                **No Allergens Added Yet**
        </MudCollapse>
    </MudStack>
</MudPaper>

<MudTextField ShrinkLabel @bind-Value="FoodItem" HelperText="Check if food contains allergens" Variant="Variant.Text"></MudTextField>

@code {
    public string FoodItem { get; set; }
    public int Spacing { get; set; } = 6;
    string hideAllergens = "Hide Allergens";
    string viewAllergens = "View Allergens";
    bool _expanded = true;

    private void OnExpandCollapseClick() {
        _expanded = !_expanded;
    }
}
